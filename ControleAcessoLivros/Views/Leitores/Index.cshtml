@model IEnumerable<ControleAcessoLivros.Models.Leitor>

@{
    ViewData["Title"] = "Livraria da Vivi";
}

<h1>Leitores</h1>

<p>
    <a asp-action="Create">Adicionar Novo Leitor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeLeitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeLeitor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning" asp-route-id="@item.LeitorId">Editar</a> |
                <a asp-action="Details" class="btn btn-light" asp-route-id="@item.LeitorId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.LeitorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
