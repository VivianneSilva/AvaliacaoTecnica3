@model IEnumerable<ControleAcessoLivros.Models.Leitura>

@{
    ViewData["Title"] = "Livraria da Vivi";
}

<h1>Leituras</h1>

<p>
    <a asp-action="Create">Adicionar Nova Leitura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Leitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusLivro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Leitor.NomeLeitor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Livro.NomeLivro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusLivro.Status)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.LeituraId">Editar</a> |
                <a asp-action="Details"  class="btn btn-light" asp-route-id="@item.LeituraId">Detalhes</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.LeituraId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
