@model ControleAcessoLivros.Models.Leitura

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Leitura</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeitorId" class="control-label"></label>
                <select asp-for="LeitorId" class ="form-control" asp-items="ViewBag.LeitorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <select asp-for="LivroId" class ="form-control" asp-items="ViewBag.LivroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusLivroId" class="control-label"></label>
                <select asp-for="StatusLivroId" class ="form-control" asp-items="ViewBag.StatusLivroId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
