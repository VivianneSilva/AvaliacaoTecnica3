@model ControleAcessoLivros.Models.Leitura

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeituraId" />
            <div class="form-group">
                <label asp-for="LeitorId" class="control-label"></label>
                <select asp-for="LeitorId" class="form-control" asp-items="ViewBag.LeitorId"></select>
                <span asp-validation-for="LeitorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <select asp-for="LivroId" class="form-control" asp-items="ViewBag.LivroId"></select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusLivroId" class="control-label"></label>
                <select asp-for="StatusLivroId" class="form-control" asp-items="ViewBag.StatusLivroId"></select>
                <span asp-validation-for="StatusLivroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
