@model ControleAcessoLivros.Models.Leitura

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Leitor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leitor.NomeLeitor)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Livro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Livro.NomeLivro)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusLivro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusLivro.Status)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LeituraId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
