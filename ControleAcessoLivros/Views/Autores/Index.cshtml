@model IEnumerable<ControleAcessoLivros.Models.Autor>

@{
    ViewData["Title"] = "Livraria da Vivi";
}

<h1>Autores</h1>

<p>
    <a asp-action="Create">Adicionar Novo Autor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.AutorId">Editar</a> |
                <a asp-action="Details" class="btn btn-light" asp-route-id="@item.AutorId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.AutorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
